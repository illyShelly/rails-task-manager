<!-- edit task -> form link -->
<!-- do not need add ...path(@task) -->
<%= link_to edit_task_path, class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil" aria-hidden="true"></i> Edit this task
<% end %>

<h1><%= @task.title %></h1>

<div class="p-3 mb-2 bg-light text-dark">
  <%= @task.details %>
</div>

<div class="p-3 mb-2 bg-white text-dark">
  <% if @task.completed %>
    <!-- i tag change style -> write behind that -->
    <i class="fa fa-check-square-o"></i> This task is completed
    <!-- <li>This task is completed</li> -->
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
    <!-- <li>This task is not completed yet</li> -->
  <% end %>
</div>

<hr>

<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>


